<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_area :description, placeholder: "description" %>
  </div>
  <br>
  <div>
    <% if @post.images.attached? %>
      <div>
        <% if @post.images.image? %>
            <%= image_tag(@post.images) %>
        <% elsif @post.images.video? %>
            <div>
                <%= video_tag(url_for(@post.images), controls: "", class:"video") %>
            </div>
        <% end %>
    </div>
    <% end %>
    <div><%= form.file_field :images, multiple: true %></div><br>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
